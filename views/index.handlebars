<h1>Burgers!</h1>

<h2>Uneaten Burgers</h2>

<div class="container">

  <div class="row">

    <div class="col-md-6">

      <ul>
        {{#each burgers}} {{#unless devoured}}
        <li>
          {{burger_name}}

          <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
            {{#if devoured}}UNEAT!{{else}}EAT!{{/if}}
          </button>

          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
        </li>
        {{/unless}} {{/each}}
      </ul>

    </div>
    <div class="col-md-6">

      <h2>Eaten Burgers</h2>

      <ul>
        {{#each burgers}} {{#if devoured}}
        <li>
          {{burger_name}}

          <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
            {{#if devoured}}UNEAT!{{else}}EAT!{{/if}}
          </button>

          <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
        </li> {{/if}} {{/each}}
      </ul>

    </div>
  </div>

  <div class="row">

    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="burger">Devoured or not?</label>
        <br>
        <input type="radio" name="burger" value="1" checked> Eaten
        <br>
        <input type="radio" name="burger" value="0"> Uneaten
      </div>

      <button type="submit">Add Burger</button>
    </form>

  </div>

</div>